<h3>Post Reports</h3>
<table id="table">
    {{#if reports.length}}
        <thead>
            <tr>
                <th>Post ID</th>
                <th>Author</th>
                <th>Report Reason</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each reports}}
                <tr data-status="{{status}}" data-post-id="{{_id}}">
                    <td><a href="/adminViewPost/{{reportedItemId._id}}" class="post-link">{{reportedItemId._id}}</a></td>
                    <td><a href="/adminProfile/{{author.username}}">{{author.username}}</a></td>
                    <td>{{reason}}</td>
                    <td><span class="badge {{status}}-badge">{{status}}</span></td>
                    <td>
                        <form action="/admin/report/{{_id}}/approve" method="POST" style="display: inline;">
                            <button type="submit" class="approve-btn">Approve</button>
                        </form>
                        <form action="/admin/report/{{_id}}/delete" method="POST" style="display: inline;">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="delete-btn">Delete</button>
                        </form>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    {{else}}
        <tbody>
            <tr>
                <td colspan="5">No post reports available.</td>
            </tr>
        </tbody>
    {{/if}}
</table>