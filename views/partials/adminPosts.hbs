{{#if reports.length}}
    <table>
        <thead>
            <tr>
                <th>Post ID</th>
                <th>Author</th>
                <th>Report Reason</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each reports}}
                <tr data-status="{{status}}" data-post-id="{{_id}}">
                    <td><a href="/adminViewPost/{{reportedItemId}}" class="post-link">{{reportedItemId}}</a></td>
                    <td><a href="/adminProfile/{{author.username}}">{{author.username}}</a></td>
                    <td>{{reason}}</td>
                    <td><span class="badge {{status}}-badge">{{status}}</span></td>
                    <td>
                        <button class="approve-btn" onclick="approvePost({{_id}})">Approve</button>
                        <button class="delete-btn" onclick="deletePost({{_id}})">Delete</button>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
    <p>No post reports available.</p>
{{/if}}
