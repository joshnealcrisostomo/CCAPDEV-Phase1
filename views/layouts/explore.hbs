<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../styles_folder/explore.css">
    <title>Explore</title>
</head>
<body>
    <div class="container">
        <div id="left-panel">
            {{> navBar}}
        </div>
        <div class="middle-panel">
            <div class="search-container">
                <div class="return-container">
                    <button type="button" class="return-btn">
                        <img src="/icons/left_arrow.png" alt="return-btn">
                    </button>
                    <span>Return</span>
                </div>
                <hr>
                <br>
                <h2>Search</h2>
                <div class="search-section">
                    <input type="text" id="search" placeholder="Search by Keyword">
                    <a href="#" id="searchLink" class="btn-login">Search</a>
                </div>
                <div class="search-options">
                    <label><input type="checkbox"> Search entire post</label>
                    <label><input type="checkbox"> Search title only</label>
                </div>
                <div class="advanced-options">
                    <div class="sort-options">
                        <label for="sort-by">Sort by:</label>
                        <select id="sort-by">
                            <option>Last Post Date</option>
                            <option>View Count</option>
                            <option>Reply Count</option>
                        </select>
                        <div class="radio-options">
                            <label>
                                <input type="radio" name="sortOrder" value="ascending"> Ascending
                            </label>
                            <label>
                                <input type="radio" name="sortOrder" value="descending"> Descending
                            </label>
                        </div>
                    </div>
                    <div class="tag-options">
                        <label for="tag-select">Tags:</label>
                        <select id="tag-select">
                            <option>Commute</option>
                            <option>Price</option>
                            <option>Route</option>
                            <option>Location</option>
                            <option>Weather</option>
                        </select>
                    </div>
                </div>
                <br>
                <hr>

                <div class="latest-posts">
                    <h2>Trending</h2>
                    {{#each posts}} 
                    <div class="post">
                        <div class="post-title">{{postTitle}}</div>
                        <div class="post-meta">
                            <span class="username">by {{author.username}}</span>
                            <span class="upvotes">▲ {{votes}} ▼</span>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>




    
    <script>
        document.querySelector('.return-btn').addEventListener('click', function() {
            window.history.back();
        });

        document.getElementById('searchLink').addEventListener('click', function(event) {
            event.preventDefault();

            const keyword = document.getElementById('search').value;
            const searchEntirePost = document.querySelector('input[type="checkbox"]:nth-child(1)').checked;
            const searchTitleOnly = document.querySelector('input[type="checkbox"]:nth-child(2)').checked;
            const sortBy = document.getElementById('sort-by').value;
            const sortOrder = document.querySelector('input[name="sortOrder"]:checked').value;
            const tag = document.getElementById('tag-select').value;

            const url = `/search?keyword=${encodeURIComponent(keyword)}&searchEntirePost=${searchEntirePost}&searchTitleOnly=${searchTitleOnly}&sortBy=${encodeURIComponent(sortBy)}&sortOrder=${sortOrder}&tag=${encodeURIComponent(tag)}`;

            this.href = url;
            window.location.href = url;
        });
    </script>
</body>
</html>