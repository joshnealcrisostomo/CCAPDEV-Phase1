<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../styles_folder/settings.css">
    <title>Settings</title>
</head>
<body>
    <div class="container">
        <div id="left-panel">
            {{> navBar}}
        </div>
        <div class="middle-panel">
            <div class="search-container">
                <div class="return-container">
                    <button type="button" class="return-btn">
                        <img src="/icons/left_arrow.png" alt="return-btn">
                    </button>
                    <span>
                        Return
                    </span>
                </div>
                <hr>
                <br>
                <h2>Settings</h2>
                <div class="settings-section">
                    <div class="setting-option">
                        <label for="theme">Theme:</label>
                        <select id="theme">
                            <option value="light">Light</option>
                            <option value="dark">Dark</option>
                            <option value="system">System Default</option>
                        </select>
                    </div>
                    <div class="setting-option">
                        <label for="notifications" {{#unless isLoggedIn}} style="display:none;" {{/unless}}>Notifications:</label>
                        <select id="notifications" {{#unless isLoggedIn}} style="display:none;" {{/unless}}>
                            <option value="all">All Notifications</option>
                            <option value="mentions">Only Mentions</option>
                            <option value="none">None</option>
                        </select>
                    </div>
                    <div class="setting-option">
                        <label for="privacy" {{#unless isLoggedIn}} style="display:none;" {{/unless}}>Privacy:</label>
                        <select id="privacy" {{#unless isLoggedIn}} style="display:none;" {{/unless}}>
                            <option value="public">Public</option>
                            <option value="friends">Friends Only</option>
                            <option value="private">Private</option>
                        </select>
                    </div>
                    <div class="setting-option">
                        <label for="language">Language:</label>
                        <select id="language">
                            <option value="en">English</option>
                            <option value="es">Spanish</option>
                            <option value="fr">French</option>
                            <option value="de">German</option>
                        </select>
                    </div>
                    <div class="setting-option">
                        <label for="font-size">Font Size:</label>
                        <input type="range" id="font-size" min="12" max="24" value="16">
                    </div>
                </div>
                <form id="deleteForm">
                    <button type="button" class="delete-profile">
                        <span>Delete Account</span>
                    </button>
                </form>
                <script>
                    document.querySelector(".delete-profile").addEventListener("click", async function () {
                        const confirmDelete = confirm("Are you sure? This cannot be undone.");
                        
                        if (!confirmDelete) return; // If user clicks "Cancel", do nothing.
                        const userId = "{{user._id}}".trim();  // Ensure it's a valid ID

                        if (!userId) {
                            alert("‚ùå Error: User ID is missing.");
                            return;
                        }

                        console.log("üõë Sending DELETE request for user:", userId);
                        try {
                            const response = await fetch(`http://localhost:3000/users/${userId}`, {
                                method: "DELETE",
                                credentials: "include",
                                headers: {
                                    "Content-Type": "application/json"
                                }
                            });

                            if (response.ok) {
                                alert("‚úÖ Account deleted successfully!");
                                window.location.href = "/register"; // Redirect to register page
                            } else {
                                const errorData = await response.json();
                                alert(`‚ùå ${errorData.message}`);
                            }
                        } catch (error) {
                            console.error("‚ùå Fetch Error:", error);
                            alert("‚ùå Network error. Please try again.");
                        }
                    });

                </script>
                <br>
                <hr>
            </div>
        </div>
    </div>
    <script>
        document.querySelector('.return-btn').addEventListener('click', function() {
            window.history.back();
        });
    </script>
</body>
</html>
